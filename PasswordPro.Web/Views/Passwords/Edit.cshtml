@model PasswordPro.Web.Models.Entities.Password

<h2>Edit Password</h2>


@if(Model is null)
{
    <p>No Password was found with this Id</p>
}

else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" required />
        </div>

        <div class="mt-3">
            <label class="form-label">URL</label>
            <input type="text" class="form-control" asp-for="Url" />
        </div>

        <div class="mt-3">
            <label class="form-label">User Name</label>
            <input type="text" class="form-control" asp-for="UserName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Password</label>
            <input type="text" class="form-control" asp-for="Passphrase" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Question/Answer</label>
            <input type="text" class="form-control" asp-for="QuestionAnwser" id="EditQATextInput" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Note</label>
            <input type="text" class="form-control" asp-for="Note" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </form>
 }

<div id="editqa">
    <div>
        <label>Question</label>
        <input type="text" id="EditquestionInputField" required />

        <label>Answer</label>
        <input type="text" id="EditanswerInputField" required />
        <button type="submit" id="EditQA">Add</button>
    </div>
    <div>
        <div style="margin-top: 20px;">Question/Answer</div>
        <div id="EditqaGrid"></div>
    </div>

    <div id="jsonString">
        <label>json string</label>
    </div>
    <div>
        <input type="text" id="EditjsonStringInputField"  readonly />
    </div>
</div>