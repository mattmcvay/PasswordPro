@model PasswordPro.Web.Models.AddPasswordViewModel

<h2>Add Password</h2>


<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required/>
    </div>

    <div class="mt-3">
        <label class="form-label">URL</label>
        <input type="text" class="form-control" asp-for="Url" />
    </div>

    <div class="mt-3">
        <label class="form-label">User Name</label>
        <input type="text" class="form-control" asp-for="UserName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Password</label>
        <input type="text" class="form-control" asp-for="Passphrase" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Question/Answer</label>          
        <input type="text" class="form-control" asp-for="QuestionAnwser" id="QATextInput" readonly/>      
    </div>

    <div class="mt-3">
        <label class="form-label">Note</label>
        <input type="text" class="form-control" asp-for="Note"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>



<div id="qa">
    <div>
        <label>Question</label>
        <input type="text" id="questionInputField"  required />

        <label>Answer</label>
        <input type="text" id="answerInputField"  required />
        <button type="submit" id="addQA">Add</button>
    </div>
    <div>
        <div style="margin-top: 20px;">Question/Answer</div>
        <div id="qaGrid"></div>
    </div>

    <div id="jsonString">
        <label>json string</label>
    </div>
    <div>
        <input type="text" id="jsonStringInputField" readonly/>
    </div>
</div>