@model PasswordPro.Web.Models.AddPasswordViewModel

<h1>Add Password</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">URL</label>
        <input type="text" class="form-control" asp-for="Url" />
    </div>

    <div class="mt-3">
        <label class="form-label">User Name</label>
        <input type="text" class="form-control" asp-for="UserName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Password</label>
        <input type="text" class="form-control" asp-for="Passphrase" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Question/Answer</label>
        <input type="text" class="form-control" asp-for="QuestionAnwser" />
    </div>

    <div class="mt-3">
        <label class="form-label">Note</label>
        <input type="text" class="form-control" asp-for="Note"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>